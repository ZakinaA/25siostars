{% extends 'base.html.twig' %}

{% block title %}Compte index{% endblock %}

{% block body %}
    <h1>Liste des comptes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identifiant</th>
                <th>Role</th>
                <th>Mot de passe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.identifiant }}</td>
                <td>{{ compte.roles ? compte.roles|json_encode : '' }}</td>
                <td>{{ compte.password }}</td>
                <td>
                    <a href="{{ path('app_compte_edit', {'id': compte.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun compte trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
